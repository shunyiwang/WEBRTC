<?xml version="1.0" encoding="utf-8"?>
<android
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_live"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:background="#FF0900"
        android:text="我要直播"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_watch"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:background="#228B22"
        android:text="我要观看"
        app:layout_constraintEnd_toEndOf="@+id/button_live"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_live"
        app:layout_constraintTop_toBottomOf="@+id/button_live"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="112dp"
        android:src="@mipmap/head_new"
        app:layout_constraintEnd_toEndOf="@+id/button_watch"
        app:layout_constraintStart_toStartOf="@+id/button_watch"
        app:layout_constraintTop_toBottomOf="@+id/button_watch"
        tools:ignore="MissingConstraints"
        android:alpha="0.7"/>
</android>